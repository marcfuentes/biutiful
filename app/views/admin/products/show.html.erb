<h2><%= t(:show, :default => "Show") %> <%= t(:product, :default => "product") %></h2>

  <p>
    <b><%= t(:name, :default => "Name") %>:</b>
      <%= @product.name %>
  </p>
  <p>
    <b><%= t(:price, :default => "Price") %>:</b>
      <%= number_to_currency(@product.price) %>
  </p>
  <p>
    <b><%= t(:tva, :default => "Tva") %>:</b>
      <%= @product.tva %>
  </p>
  <p>
    <b><%= t(:description, :default => "Description") %>:</b>
      <%= @product.description %>
  </p>
  <p>
    <b><%= t(:visible, :default => "Visible") %>:</b>
      <%= t((@product.visible ? "yes".to_sym : "no".to_sym)) %>
  </p>

  <p>
    <b><%= t(:family, :default => "Family") %>:</b>
      <%= (@product.family.nil? ? "" : @product.family.caption) %>
  </p>
<!-- Beautiful_scaffold - AddField - Field - Do not remove -->

<%= link_to t(:edit, :default => "Edit"), edit_admin_product_path(@product), :class => "btn" %>
<%= link_to t(:back, :default => "Back"), admin_products_path, :class => "btn" %>

